def show_menu():
    print(" _____ _            _                 _    ____                   _")
    print("| ____| | ___ _ __ | |__   __ _ _ __ | |_ /  __| ___  _   _ _ __ | |_ ___ _ __")
    print("|  _| | |/ _ \\ '_ \\| '_ \\ / _' | '_ \\| __|  |   / _ \\| | | | '_ \\| __/ _ \\ '__|")
    print("| |___| | ___/ |_) | | | | (_| | | | | |_|  |__| (_) | |_| | | | | ||  __/ |")
    print("|_____|_|\\___| .__/|_| |_|\\__,_|_| |_|\\__|\\____|\\___/\\___,_|_| |_|\\__\\___|_|")
    print("              |_|", '\n')
    print("<------------------------------------–ì–æ–ª–æ–≤–Ω–µ –º–µ–Ω—é---------------------------------------------->")
    print("|                         / /=============================\ \                                  |")
    print("|                             –ù–∞ —è–∫—É –≤–µ—Ä—Å—ñ—é –≤–∞–º –ø–æ—Ç—Ä—ñ–±–Ω–æ?                                      |")
    print("|                         \ \=============================/ /                                  |")
    print("|                                                                                              |")
    print("|[1] - Elephant Counter v1.0                                                                   |")
    print("|[2] - Elephant counter v2.0                                                                   |")
    print("|[3] - Elephant counter v3.0 Premium Deluxe Edition                                            |")
    print("|[4] - Elephant counter v3.0 Counter Starter Edition                                           |")
    print("|[5] - Elephant Counter v4.0 Premium Deluxe Edition                                            |")
    print("|[6] - Elephant Counter v.5.0 Ultimate International Premium Deluxe Edition                    |")
    print("|[7] - –í–∏—Ö—ñ–¥                                                                                    |")
    print("<------------------------------------------------------------------------------------------------>\n")

while True:
    show_menu()
    choice = input("–û–±–µ—Ä—ñ—Ç—å –≤–µ—Ä—Å—ñ—é (1‚Äì7): ")

    if choice == "1":
        print("Elephant counter v1.0")
        for i in range(10):
            print(i)

    elif choice == "2":
        print("Elephant counter v2.0")
        n = int(input("–°–∫—ñ–ª—å–∫–∏ —Å–ª–æ–Ω–µ–Ω—è—Ç —Ä–∞—Ö—É–≤–∞—Ç–∏: "))
        for i in range(n + 1):
            print(i)

    elif choice == "3":
        print("Elephant counter v3.0 Premium Deluxe Edition")
        n = int(input("–°–∫—ñ–ª—å–∫–∏ —Å–ª–æ–Ω–µ–Ω—è—Ç —Ä–∞—Ö—É–≤–∞—Ç–∏: "))
        for i in range(n + 1):
            print(" _________")
            print(f"<____{i}____>")
            print(" _ _/__")
            print("/ |..| \\ ")
            print("\\  || \\/ ")
            print(" |_  _| ")

    elif choice == "4":
        print("Elephant counter v3.0 Counter Starter Edition")
        n = int(input("–°–∫—ñ–ª—å–∫–∏ —Å–ª–æ–Ω–µ–Ω—è—Ç —Ä–∞—Ö—É–≤–∞—Ç–∏: "))
        if n > 100:
            print("üîí –¶–µ Starter Edition. –î–ª—è —Ä–∞—Ö—É–≤–∞–Ω–Ω—è –ø–æ–Ω–∞–¥ 100 —Å–ª–æ–Ω–µ–Ω—è—Ç –ø—Ä–∏–¥–±–∞–π—Ç–µ Elephant Counter PRO –≤—Å—å–æ–≥–æ –∑–∞ 99,99‚Ç¥!")
            n = 100
        for i in range(n + 1):
            last_two = i % 100
            last_digit = i % 10
            if i == 42:
                print("42 —Å–ª–æ–Ω–µ–Ω—è—Ç–∏ ‚Äî –≤—ñ–¥–ø–æ–≤—ñ–¥—å –Ω–∞ –≥–æ–ª–æ–≤–Ω–µ –ø–∏—Ç–∞–Ω–Ω—è –∂–∏—Ç—Ç—è, –≤—Å–µ—Å–≤—ñ—Ç—É —ñ –≤—Å—å–æ–≥–æ —Ç–∞–∫–æ–≥–æ.")
            elif 11 <= last_two <= 14:
                print(f"{i} —Å–ª–æ–Ω–µ–Ω—è—Ç")
            elif last_digit == 1:
                print(f"{i} —Å–ª–æ–Ω–µ–Ω—è")
            elif 2 <= last_digit <= 4:
                print(f"{i} —Å–ª–æ–Ω–µ–Ω—è—Ç–∏")
            else:
                print(f"{i} —Å–ª–æ–Ω–µ–Ω—è—Ç")
        if n == 1:
            print("–°–µ—Ä–π–æ–∑–Ω–æ? –û–¥–∏–Ω —Å–ª–æ–Ω–µ–Ω—è? –¶–µ —Ç–æ—á–Ω–æ —Ç–æ–±—ñ –¥–æ–ø–æ–º–æ–∂–µ –∑–∞—Å–Ω—É—Ç–∏? üêòüí§")
        elif n == 100:
            print("–û–≥–æ, 100 —Å–ª–æ–Ω–µ–Ω—è—Ç. –¢–∏ –∞–±–æ –¥—É–∂–µ –≤—Ç–æ–º–ª–µ–Ω–∏–π, –∞–±–æ –Ω–∞ –º–µ–∂—ñ –±–æ–∂–µ–≤—ñ–ª–ª—è. –£–¥–∞—á—ñ!")

    elif choice == "5":
        print("Elephant Counter v4.0 Premium Deluxe Edition")
        n = int(input("–°–∫—ñ–ª—å–∫–∏ —Å–ª–æ–Ω–µ–Ω—è—Ç –ø–æ–∫–∞–∑–∞—Ç–∏? "))
        for i in range(1, n + 1):
            s = '/' * i
            bs = '\\' * i 
            b = '|' * i

            print(" _ ___")
            print(f"{s} |..| \\ ")
            print(f"{bs}  || \\/ ")
            print(f" {b}_  _|")

    elif choice == "6":
        print("Elephant Counter v.5.0 Ultimate International Premium Deluxe Edition")
        animal = input("–Ø–∫—É —Ç–≤–∞—Ä–∏–Ω—É –±—É–¥–µ–º–æ —Ä–∞—Ö—É–≤–∞—Ç–∏ (—Å–ª–æ–Ω–µ–Ω—è / –∫—ñ—à–∫–∞)? ").strip().lower()
        n = int(input("–°–∫—ñ–ª—å–∫–∏ –±—É–¥–µ–º–æ —ó—Ö —Ä–∞—Ö—É–≤–∞—Ç–∏? "))

        if animal == "—Å–ª–æ–Ω–µ–Ω—è":
            for i in range(1, n + 1):
                slashes = '/' * i
                backslashes = '\\' * i
                bars = '|' * i

                print(" _ ___")
                print(f"{slashes} |..| \\ ")
                print(f"{backslashes}  || \\/ ")
                print(f" {bars}_  _|")

        elif animal == "–∫—ñ—à–∫–∞":
            for j in range(1, n + 1):
                whiskers = '~' * j
                tail = ">" + "=" * j
                print("  /\\_/\\ ")
                print(" ( o.o )")
                print(f"{whiskers}| ^ |{whiskers}")
                print(f"   {tail}")

        else:
            print("–¢–∞–∫–∏—Ö —Ç–≤–∞—Ä–∏–Ω —É –Ω–∞—Å –Ω–µ–º–∞—î :( –ê–ª–µ —Å–∫–æ—Ä–æ –±—É–¥–µ! ü¶Ñ")

    elif choice == "7":
        print("–î—è–∫—É—î–º–æ –∑–∞ –∫–æ—Ä–∏—Å—Ç—É–≤–∞–Ω–Ω—è Elephant Counter v5.0 U.I.P.D.E. üòÑ –î–æ –∑—É—Å—Ç—Ä—ñ—á—ñ!")
        break

    else:
        print("‚ùó –ù–µ–≤—ñ—Ä–Ω–∏–π –≤–∏–±—ñ—Ä. –í–≤–µ–¥—ñ—Ç—å —á–∏—Å–ª–æ –≤—ñ–¥ 1 –¥–æ 7.")

